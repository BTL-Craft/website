    <link href="/assets/style/loading.css" rel="stylesheet" type="text/css" />
    <script>
      window.onload = function () {
        $('#loading').fadeOut(50)
        setTimeout(() => {
          $('#page').fadeIn(50)
        }, 60)
        if (window.location.hash != '') {
          setTimeout(() => {
            window.location.href = window.location.hash
          }, 100)
        }
      }
    </script>
    <style></style>
  </head>

